// Prisma schema for bh-dashboard (Supabase PostgreSQL)
// Auth.js models + app models (Location, User role/location/approval)

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

// ---------- Auth.js required models ----------
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ---------- App: Realm (QuickBooks company / token set; one-to-many Locations) ----------
model Realm {
  id               String    @id @default(cuid())
  realmId          String    @unique @map("realm_id") // QuickBooks company id
  name             String
  accessToken      String?   @map("access_token") @db.Text
  refreshToken     String?   @map("refresh_token") @db.Text
  expiresAt        DateTime? @map("expires_at")
  refreshExpiresAt DateTime? @map("refresh_expires_at")
  createdAt        DateTime  @default(now()) @map("created_at")

  locations Location[]

  @@map("realms")
}

// ---------- App: Locations (HQ, CC, PM, extensible) ----------
model Location {
  id             String   @id @default(cuid())
  code           String   @unique // e.g. "HQ", "CC", "PM"
  name           String
  realmId        String   @map("realm_id") // FK to Realm
  classId        String?  @map("class_id")
  createdAt      DateTime @default(now()) @map("created_at")
  startYearMonth String?  @map("start_year_month") // YYYY-MM

  realm   Realm    @relation(fields: [realmId], references: [id], onDelete: Restrict)
  users   User[]
  budgets Budget[]

  @@map("locations")
}

// ---------- Budget: default settings (office/admin) ----------
// Single row: default budget rate (e.g. 0.3 = 30% of reference income), reference period in months (e.g. 6).
model BudgetSettings {
  id                    String   @id @default(cuid())
  budgetRate            Decimal  @map("budget_rate") @db.Decimal(5, 4) // e.g. 0.3
  referencePeriodMonths Int      @map("reference_period_months") // e.g. 6
  updatedAt             DateTime @updatedAt @map("updated_at")
  updatedById           String?  @map("updated_by_id")
  updatedBy             User?    @relation("BudgetSettingsUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull)

  @@map("budget_settings")
}

// ---------- Budget: total per location per month ----------
model Budget {
  id                        String   @id @default(cuid())
  locationId                String   @map("location_id")
  yearMonth                 String   @map("year_month") // YYYY-MM
  totalAmount               Decimal  @map("total_amount") @db.Decimal(14, 2)
  budgetRateUsed            Decimal? @map("budget_rate_used") @db.Decimal(5, 4)
  referencePeriodMonthsUsed Int?     @map("reference_period_months_used")
  error                     String?  @map("error") // e.g. QB_REFRESH_EXPIRED when creation failed
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")

  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@unique([locationId, yearMonth])
  @@map("budgets")
}

// ---------- App: User (extends Auth.js User with role, location, approval) ----------
enum UserRole {
  admin // developer, full config
  office // set budget, view all locations; permitted by admin
  manager // view own location only; permitted by admin or office
}

enum UserStatus {
  pending_onboarding // just signed up, must set name/role/location
  pending_approval // office or manager waiting for permission
  active // can use the app
  rejected // rejected by admin
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?

  // App fields
  role          UserRole?  @default(manager)
  status        UserStatus @default(pending_onboarding) @map("status")
  locationId    String?    @map("location_id") // only for manager
  permittedById String?    @map("permitted_by_id") // who approved (admin or office)
  permittedAt   DateTime?  @map("permitted_at")
  rejectReason  String?    @map("reject_reason") // optional reason when status is rejected
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  location              Location?        @relation(fields: [locationId], references: [id], onDelete: SetNull)
  permittedBy           User?            @relation("UserPermittedBy", fields: [permittedById], references: [id], onDelete: SetNull)
  permittedUsers        User[]           @relation("UserPermittedBy")
  budgetSettingsUpdates BudgetSettings[] @relation("BudgetSettingsUpdatedBy")

  accounts Account[]
  sessions Session[]

  @@map("users")
}
