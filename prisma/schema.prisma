// Prisma schema for bh-budget (Supabase PostgreSQL)
// Auth.js models + app models (Location, User role/location/approval)

generator client {
  provider = "prisma-client-js"
  output  = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

// ---------- Auth.js required models ----------
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ---------- App: Locations (HQ, CC, PM, extensible) ----------
model Location {
  id        String   @id @default(cuid())
  code      String   @unique // e.g. "HQ", "CC", "PM"
  name      String
  createdAt DateTime @default(now()) @map("created_at")

  users User[]

  @@map("locations")
}

// ---------- App: User (extends Auth.js User with role, location, approval) ----------
enum UserRole {
  admin   // developer, full config
  office  // set budget, view all locations; permitted by admin
  manager // view own location only; permitted by admin or office
}

enum UserStatus {
  pending_onboarding // just signed up, must set name/role/location
  pending_approval   // office or manager waiting for permission
  active             // can use the app
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?

  // App fields
  role       UserRole?    @default(manager)
  status     UserStatus   @default(pending_onboarding) @map("status")
  locationId String?      @map("location_id") // only for manager
  permittedById String?   @map("permitted_by_id") // who approved (admin or office)
  permittedAt   DateTime? @map("permitted_at")
  createdAt  DateTime    @default(now()) @map("created_at")
  updatedAt  DateTime    @updatedAt @map("updated_at")

  location   Location?   @relation(fields: [locationId], references: [id], onDelete: SetNull)
  permittedBy User?       @relation("UserPermittedBy", fields: [permittedById], references: [id], onDelete: SetNull)
  permittedUsers User[]   @relation("UserPermittedBy")

  accounts Account[]
  sessions Session[]

  @@map("users")
}
